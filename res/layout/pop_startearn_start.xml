<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="15dp" >

    <RelativeLayout
        android:id="@+id/pop_bg"
        android:layout_width="wrap_content"
        android:layout_height="250dp"
        android:background="@drawable/pop_bg"
        android:paddingBottom="20dp" >

        <include
            android:id="@+id/include1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            layout="@layout/includ_tab_startearn_pop" />

        <TextView
            android:id="@+id/textview_question"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/include1"
            android:layout_centerHorizontal="true"
            android:layout_marginLeft="20dp"
            android:layout_marginRight="20dp"
            android:layout_marginTop="20dp"
            android:text="的说法的发生的发生的冯绍峰大是大非"
            android:textSize="15sp" />

        <LinearLayout
            android:id="@+id/line"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignLeft="@+id/textview_question"
            android:layout_alignRight="@+id/textview_question"
            android:layout_below="@+id/textview_question"
            android:layout_marginTop="20dp"
            android:orientation="horizontal" >

            <TextView
                android:id="@+id/textView1"
                android:layout_width="0dp"
                android:layout_height="40dp"
                android:layout_marginRight="5dp"
                android:layout_weight="1"
                android:background="@drawable/shape_my_gridview_2px"
                android:editable="false"
                android:gravity="center"
                android:lines="1"
                android:padding="0dp"
                android:textSize="15sp" />

            <TextView
                android:id="@+id/textView2"
                android:layout_width="0dp"
                android:layout_height="40dp"
                android:layout_weight="1"
                android:background="@drawable/shape_my_gridview_2px"
                android:editable="false"
                android:gravity="center"
                android:lines="1"
                android:padding="0dp"
                android:text="错误答案"
                android:textSize="15sp" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignLeft="@+id/textview_question"
            android:layout_alignRight="@+id/textview_question"
            android:layout_below="@+id/line"
            android:layout_marginTop="20dp"
            android:orientation="horizontal" >

            <TextView
                android:id="@+id/textView3"
                android:layout_width="0dp"
                android:layout_height="40dp"
                android:layout_marginRight="5dp"
                android:layout_weight="1"
                android:background="@drawable/shape_my_gridview_2px"
                android:editable="false"
                android:gravity="center"
                android:lines="1"
                android:padding="0dp"
                android:text="错误答案"
                android:textSize="15sp" />

            <TextView
                android:id="@+id/textView4"
                android:layout_width="0dp"
                android:layout_height="40dp"
                android:layout_weight="1"
                android:background="@drawable/shape_my_gridview_2px"
                android:editable="false"
                android:gravity="center"
                android:lines="1"
                android:padding="0dp"
                android:text="错误答案"
                android:textSize="15sp" />
        </LinearLayout>

        <ViewStub
            android:id="@+id/viewstub_loading"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_below="@+id/include1"
            android:layout="@layout/includ_loading" />
    </RelativeLayout>

</RelativeLayout>