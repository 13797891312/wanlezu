<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/shape_bg">

            <TextView
                android:id="@+id/textView_title"
                android:layout_width="match_parent"
                android:layout_height="45dp"
                android:layout_alignParentTop="true"
                android:layout_centerHorizontal="true"
                android:gravity="center"
                android:background="@drawable/shape_pop_tab"
                android:textSize="17sp"
                android:textColor="#f00"
                android:textStyle="bold" />

            <LinearLayout
                android:id="@+id/line"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/textView_title"
                android:layout_centerHorizontal="true"
                android:layout_marginTop="10dp"
                android:orientation="horizontal" >

                <TextView
                    android:id="@+id/textView_from"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="来自：玩赚" />

                <TextView
                    android:layout_marginLeft="20dp"
                    android:id="@+id/textView_time"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="时间：2014-5-26" />

            </LinearLayout>

            <TextView
                android:padding="10dp"
                android:id="@+id/textView_text"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentLeft="true"
                android:layout_below="@+id/line"
                android:textSize="15sp" />

            <EditText
                android:id="@+id/editText1"
                android:layout_width="match_parent"
                android:layout_height="35dp"
                android:layout_alignParentLeft="true"
                android:layout_below="@+id/textView_text"
                android:layout_toLeftOf="@+id/button1"
                android:background="@drawable/shape_my_gridview"
                android:visibility="gone"
                android:paddingLeft="10dp"
                android:textSize="14sp"
                android:hint="请输入回复类容" >
            </EditText>

            <Button
                android:id="@+id/button1"
                android:layout_width="50dp"
                android:layout_height="35dp"
                android:layout_alignBottom="@+id/editText1"
                android:visibility="gone"
                android:textSize="14sp"
                android:gravity="center"
                android:layout_alignParentRight="true"
                android:background="@drawable/shape_quan"
                android:textColor="#fff"
                android:text="回复" />

</RelativeLayout>