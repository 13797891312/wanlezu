<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#fff">

    <include
        android:id="@+id/tab"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        layout="@layout/includ_tab_back" />
    <RelativeLayout
        android:id="@+id/rel"
        android:background="@color/red"
        android:layout_width="match_parent"
        android:layout_height="45dp"
        android:layout_below="@+id/tab"
        android:layout_centerHorizontal="true" >

        <TextView
            android:id="@+id/textView_last"
            android:layout_width="80dp"
            android:layout_height="match_parent"
            android:layout_alignParentLeft="true"
            android:layout_centerVertical="true"
            android:textColor="#fff"
            android:textSize="14sp"
            android:gravity="center"
            android:clickable="true"
            android:text="上一期" />
        <TextView
            android:id="@+id/textView_next"
            android:layout_width="80dp"
            android:layout_height="match_parent"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:textColor="#fff"
            android:clickable="true"
            android:textSize="14sp"
            android:gravity="center"
            android:text="下一期" />
        <TextView
            android:id="@+id/textView_3"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:layout_centerVertical="true"
            android:textColor="#fff"
            android:textSize="14sp"
            android:gravity="center"
            android:text="第102415421期" />

    </RelativeLayout>

    <TextView
        android:layout_below="@+id/rel"
        android:id="@+id/textView_luck"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="15dp"
        android:layout_marginLeft="15dp"
        android:text="本期中奖号码：1234" />
    <TextView
        android:layout_below="@+id/rel"
        android:id="@+id/textView_myCode"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
        android:layout_marginTop="15dp"
        android:layout_marginRight="15dp"
        android:text="我的投注：未投注" />
    <ListView
        android:listSelector="@android:color/transparent"
        android:id="@+id/listview"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/shape_my_gridview_2px"
        android:layout_below="@+id/textView_luck"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"
        android:layout_marginTop="15dp"
        android:layout_marginBottom="10dp"
        android:scrollbars="none"/>


</RelativeLayout>