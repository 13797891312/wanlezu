<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/rel"
    android:layout_width="match_parent"
    android:layout_height="match_parent" >

    <include
        android:id="@+id/tab"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        layout="@layout/includ_tab_back" />

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/tab"
        android:scrollbars="none" >

        <LinearLayout
            android:id="@+id/linearLayout2"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical" >

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:layout_weight="0"
                android:background="#fff" >

                <TextView
                    android:id="@+id/textView1"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentLeft="true"
                    android:layout_centerVertical="true"
                    android:layout_marginLeft="20dp"
                    android:text="第2014101202期"
                    android:textColor="#E22732"
                    android:textSize="12sp" />

                <TextView
                    android:id="@+id/textView2"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentRight="true"
                    android:layout_centerVertical="true"
                    android:layout_marginRight="10dp"
                    android:text="00:00:00"
                    android:textColor="#E22732"
                    android:textSize="12sp" />

                <ImageView
                    android:id="@+id/imageView1"
                    android:layout_width="15dp"
                    android:layout_height="15dp"
                    android:layout_centerVertical="true"
                    android:layout_marginRight="5dp"
                    android:layout_toLeftOf="@+id/textView2"
                    android:scaleType="fitXY"
                    android:src="@drawable/time" />
            </RelativeLayout>

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:layout_weight="0"
                android:background="#E22732" >

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentLeft="true"
                    android:layout_centerVertical="true"
                    android:layout_marginLeft="20dp"
                    android:orientation="vertical" >

                    <TextView
                        android:id="@+id/textView3"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="本期竞猜"
                        android:textColor="#fff"
                        android:textSize="12sp" />

                    <TextView
                        android:id="@+id/textView_yue"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="余额  : "
                        android:textColor="#fff"
                        android:textSize="12sp" />
                </LinearLayout>

                <LinearLayout
                    android:id="@+id/linearLayout1"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerHorizontal="true"
                    android:layout_centerVertical="true" >

                    <TextView
                        android:id="@+id/imageView2"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginRight="3dp"
                        android:text="\?"
                        android:textColor="#fff"
                        android:textSize="30sp"
                        android:textStyle="bold" />

                    <TextView
                        android:id="@+id/imageView3"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginRight="3dp"
                        android:text="\?"
                        android:textColor="#fff"
                        android:textSize="30sp"
                        android:textStyle="bold" />

                    <TextView
                        android:id="@+id/imageView4"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginRight="3dp"
                        android:text="\?"
                        android:textColor="#fff"
                        android:textSize="30sp"
                        android:textStyle="bold" />

                    <TextView
                        android:id="@+id/imageView5"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginRight="3dp"
                        android:text="\?"
                        android:textColor="#fff"
                        android:textSize="30sp"
                        android:textStyle="bold" />
                </LinearLayout>

                <TextView
                    android:id="@+id/textView4"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentRight="true"
                    android:layout_centerVertical="true"
                    android:layout_marginRight="10dp"
                    android:text="本期奖池0玩币"
                    android:textColor="#fff"
                    android:textSize="12sp" />
            </RelativeLayout>

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:layout_weight="0"
                android:background="#EEEEEE" >

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerHorizontal="true"
                    android:layout_centerVertical="true" >

                    <EditText
                        android:id="@+id/editText1"
                        android:layout_width="30dp"
                        android:layout_height="30dp"
                        android:layout_marginRight="3dp"
                        android:background="@drawable/shape_caishuzi_btn"
                        android:gravity="center"
                        android:inputType="number"
                        android:maxLength="1"
                        android:textColor="#fff"
                        android:textSize="14sp" >
                    </EditText>

                    <EditText
                        android:id="@+id/editText2"
                        android:layout_width="30dp"
                        android:layout_height="30dp"
                        android:layout_marginRight="3dp"
                        android:background="@drawable/shape_caishuzi_btn"
                        android:gravity="center"
                        android:inputType="number"
                        android:maxLength="1"
                        android:textColor="#fff"
                        android:textSize="14sp" >
                    </EditText>

                    <EditText
                        android:id="@+id/editText3"
                        android:layout_width="30dp"
                        android:layout_height="30dp"
                        android:layout_marginRight="3dp"
                        android:background="@drawable/shape_caishuzi_btn"
                        android:gravity="center"
                        android:inputType="number"
                        android:maxLength="1"
                        android:textColor="#fff"
                        android:textSize="14sp" >
                    </EditText>

                    <EditText
                        android:id="@+id/editText4"
                        android:layout_width="30dp"
                        android:layout_height="30dp"
                        android:layout_marginRight="3dp"
                        android:background="@drawable/shape_caishuzi_btn"
                        android:gravity="center"
                        android:inputType="number"
                        android:maxLength="1"
                        android:textColor="#fff"
                        android:textSize="14sp" >
                    </EditText>

                    <RelativeLayout
                        android:id="@+id/layout_ok"
                        android:layout_width="30dp"
                        android:layout_height="30dp"
                        android:layout_marginRight="3dp"
                        android:background="@drawable/shape_caishuzi_submit" >

                        <ImageView
                            android:id="@+id/imageView8"
                            android:layout_width="20dp"
                            android:layout_height="20dp"
                            android:layout_centerHorizontal="true"
                            android:layout_centerVertical="true"
                            android:src="@drawable/caishuzi_submit" />
                    </RelativeLayout>
                </LinearLayout>
            </RelativeLayout>

            <RelativeLayout
                android:id="@+id/layout_submit"
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:layout_weight="0"
                android:background="#fff"
                android:clickable="true" >

                <TextView
                    android:id="@+id/textView5"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:layout_marginLeft="10dp"
                    android:layout_toRightOf="@+id/imageView6"
                    android:text="中奖查询"
                    android:textColor="#E22732"
                    android:textSize="12sp" />

                <TextView
                    android:id="@+id/textView12"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:layout_marginRight="5dp"
                    android:layout_toLeftOf="@+id/imageView7"
                    android:text="上期竞猜号码 ： 未知"
                    android:textColor="#E22732"
                    android:textSize="12sp" />

                <ImageView
                    android:id="@+id/imageView7"
                    android:layout_width="10dp"
                    android:layout_height="10dp"
                    android:layout_alignParentRight="true"
                    android:layout_centerVertical="true"
                    android:layout_marginRight="10dp"
                    android:src="@drawable/jiantou" />

                <ImageView
                    android:id="@+id/imageView6"
                    android:layout_width="30dp"
                    android:layout_height="30dp"
                    android:layout_alignParentLeft="true"
                    android:layout_centerVertical="true"
                    android:layout_marginLeft="10dp"
                    android:src="@drawable/caishuzi_ss" />
            </RelativeLayout>

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="1"
                android:background="#EEEEEE" >

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_alignParentLeft="true"
                    android:layout_centerVertical="true"
                    android:layout_marginLeft="10dp"
                    android:layout_marginRight="10dp"
                    android:layout_marginTop="20dp"
                    android:background="#fff"
                    android:paddingBottom="30dp" >

                    <TextView
                        android:id="@+id/textView6"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentLeft="true"
                        android:layout_alignParentTop="true"
                        android:layout_marginLeft="20dp"
                        android:layout_marginTop="10dp"
                        android:text="竞猜说明：" />

                    <TextView
                        android:id="@+id/textView7"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignLeft="@+id/textView6"
                        android:layout_below="@+id/textView6"
                        android:layout_marginRight="20dp"
                        android:text="\t竞猜活动每天3期，分别在每天的12点，18点，24点开奖，开奖时间前5分钟停止当期投注，当期开奖后，马上开始下一期的投注。每个用户可以投20个玩币加入竞猜活动，所投放玩币的80%作为当期奖池，20%加入备用资金池。" />

                    <TextView
                        android:id="@+id/textView8"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignLeft="@+id/textView7"
                        android:layout_below="@+id/textView7"
                        android:layout_marginRight="20dp"
                        android:text="\n\t中奖规则：最接近当期竞猜号码的前十位用户为档期竞猜的中奖者。" />

                    <TextView
                        android:id="@+id/textView9"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignLeft="@+id/textView8"
                        android:layout_below="@+id/textView8"
                        android:layout_marginRight="20dp"
                        android:text="一等奖：当期奖池玩币总额的19%\n二等奖：当期奖池玩币总额的13%\n三等奖：当期奖池玩币总额的12%\n四等奖：当期奖池玩币总额的11%\n五等奖：当期奖池玩币总额的10%\n六等奖：当期奖池玩币总额的9%\n七等奖：当期奖池玩币总额的8%\n八等奖：当期奖池玩币总额的7%\n九等奖：当期奖池玩币总额的6%\n十等奖：当期奖池玩币总额的5%\n本竞猜活动运营最终解释权归武汉三花网络科技发展有限公司所有。\n\n中奖规则说明:\n\t最接近中奖号码的前十个投注号码计算为中奖，每个用户每期仅能投注一次。举个例子，中奖号码为8000，最接近该号码的十个投注号码分别为7900,7800,7700,7600,7500,8050,8150,8250,8350,8450. 那么,1－10名的顺序为8050,7900,8150,7800,8250,7700,8350,7600,8450,7500.如果出现相同的中奖号码，比如，2个第一名，那么，这两个第一名都获得19%的奖励。（奖池不够用就通过备用资金池的玩币支付）" />
                </RelativeLayout>
            </RelativeLayout>
        </LinearLayout>
    </ScrollView>

</RelativeLayout>